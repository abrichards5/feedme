{
  "items": [
    {
      "search": "#comicimage",
      "do": [
        {
          "search": "img",
          "do": [
            {
              "attr": "src",
              "do": [
                {
                  "copy": true,
                  "name": "image",
                  "type": "string"
                },
                {
                  "regex": "/([^/]+)\\.[[:alpha:]]+\\z",
                  "matches": [
                    {
                      "name": "title",
                      "type": "string"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "transform": {
    "title": "Strip {{.title}}",
    "uri": "{{.image}}",
    "description": "<img src=\"{{.image}}\"/> Strip {{.title}}"
  }
}
