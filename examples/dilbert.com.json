{
  "items": [
    {
      "search": "div.STR_Image",
      "do": [
        {
          "find": "a",
          "do": [
            {
              "attr": "href",
              "do": [
                {
                  "regex": "/strips/comic/(.+)/",
                  "matches": [
                    {
                      "name": "date",
                      "type": "string"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "find": "img",
          "do": [
            {
              "attr": "src",
              "do": [
                {
                  "copy": true,
                  "name": "image",
                  "type": "string"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "transform": {
    "title": "Strip {{.date}}",
    "uri": "/strips/comic/{{.date}}/",
    "description": "<img src=\"http://dilbert.com{{.image}}\"/> Strip {{.date}}"
  }
}
